{
  "name": "@very-simple/components",
  "version": "0.2.1",
  "description": "A very simple way to attach javascript to the DOM",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/very-simple/components.git"
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "shx rm -rf ./dist && tsup src/index.ts --dts --format esm",
    "dev": "vite",
    "prepublishOnly": "npm run build",
    "release": "np --no-2fa",
    "test": "vitest run",
    "test-dev": "vitest watch"
  },
  "keywords": [
    "components",
    "vanilla",
    "simple",
    "DOM",
    "attach",
    "reuse"
  ],
  "author": "arnoson",
  "license": "MIT",
  "devDependencies": {
    "jsdom": "^20.0.0",
    "np": "^7.6.1",
    "shx": "^0.3.4",
    "tsup": "^6.0.1",
    "vite": "^3.0.0",
    "vitest": "^0.19.1"
  }
}
