{
  "name": "@very-simple/components",
  "version": "0.5.2",
  "description": "A very simple way to attach javascript to the DOM",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/very-simple/components.git"
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "shx rm -rf ./dist && tsup src/index.ts --minify --dts --format esm",
    "dev": "vite",
    "prepublishOnly": "npm run build",
    "release": "bumpp --all",
    "test": "vitest run",
    "test:dev": "vitest watch",
    "test:types": "tsc --noEmit"
  },
  "keywords": [
    "components",
    "vanilla",
    "simple",
    "DOM",
    "attach",
    "reuse"
  ],
  "author": "arnoson",
  "license": "MIT",
  "devDependencies": {
    "bumpp": "^8.2.1",
    "jsdom": "^20.0.0",
    "prettier": "^2.8.7",
    "shx": "^0.3.4",
    "tsup": "^6.0.1",
    "typescript": "^4.8.4",
    "vite": "^3.0.0",
    "vitest": "^0.24.0"
  }
}
