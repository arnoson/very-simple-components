{
  "name": "@very-simple/components",
  "version": "0.8.0",
  "description": "A very simple way to attach javascript to the DOM",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/very-simple/components.git"
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "shx rm -rf ./dist && tsup src/index.ts --minify --dts --format esm",
    "dev": "vite",
    "prepublishOnly": "npm run build",
    "release": "bumpp --all",
    "test": "vitest run",
    "test:dev": "vitest watch",
    "test:types": "tsc --noEmit"
  },
  "keywords": [
    "components",
    "vanilla",
    "simple",
    "DOM",
    "attach",
    "reuse"
  ],
  "author": "arnoson",
  "license": "MIT",
  "devDependencies": {
    "bumpp": "^10.2.2",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "shx": "^0.4.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.1",
    "vitest": "^3.2.4"
  }
}
